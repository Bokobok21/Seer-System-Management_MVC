@model AccountRegisterViewModel;
<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
</head>

<body>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <section class="card shadow-lg p-4">
                <form id="registerForm" method="post" asp-controller="Account" asp-action="Register">
                    <div class="form-group mb-4">
                        <label for="Email" class="form-label">Имейл</label>
                        <input asp-for="EmailAddress" id="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="Password" class="form-label">Парола</label>
                        <input asp-for="Password" id="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="ConfirmPassword" class="form-label">Потвърдете паролата</label>
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="FirstName" class="form-label">Първо Име</label>
                        <input asp-for="FirstName" id="FirstName" class="form-control" autocomplete="first-name" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="LastName" class="form-label">Фамилия</label>
                        <input asp-for="LastName" id="LastName" class="form-control" autocomplete="last-name" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-4">
                        <button id="registerSubmit" type="submit" class="btn btn-success btn-lg fw-bold text-white rounded-pill px-5 py-3 shadow-lg w-100">
                            Регистрация
                        </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
</html>
